{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      // Init or Upgrade Gyrosse
      {
        "label": "Init or Upgrade Gyrosse ",
        "detail": "install ros_controls and dependencies",
        "type": "shell",
        "command": [
          "cd ./src &&",
          "vcs import < .repos &&",
          "wget https://raw.githubusercontent.com/ros-controls/control.ros.org/master/ros_controls.$ROS_DISTRO.repos &&",
          "vcs import  < ros_controls.$ROS_DISTRO.repos &&",
          "cd ../ &&",
          "sudo apt-get update -y &&",
          "rosdep update &&",
          "rosdep install --from-paths src --ignore-src -y"
          ],  
          "options": {
          "cwd": "${workspaceFolder}"
        }
      },      
      // Build tasks
      {
        "label": "build",
        "detail": "Build the workspace (release).",
        "type": "shell",
        "command": "colcon build --symlink-install --cmake-args '-DCMAKE_BUILD_TYPE=Release' -Wall -Wextra -Wpedantic",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      },
      {
        "label": "build debug",
        "detail": "Build the workspace (debug).",
        "type": "shell",
        "command": "colcon build --symlink-install --cmake-args '-DCMAKE_BUILD_TYPE=Debug' -Wall -Wextra -Wpedantic",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": "build",
        "problemMatcher": "$gcc"
      },
      // Test tasks
      {
        "label": "test",
        "detail": "Run all unit tests and show results.",
        "type": "shell",
        "command": "colcon test",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      // Clean tasks
      {
        "label": "clean",
        "detail": "Run the clean target.",
        "type": "shell",
        "command": "colcon clean workspace --yes",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "purge",
        "detail": "Purge workspace by deleting all generated files.",
        "type": "shell",
        "command": "rm -fr build install log && py3clean .",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      }
    ],
    "inputs": [
      {
        "id": "package",
        "type": "promptString",
        "description": "Package name"
      }
    ]
  }